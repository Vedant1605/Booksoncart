<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <main>
        <% if (prods.length>0){ %>
        <div class="grid">
            <% for(let product of prods){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="/<%=product.imageUrl%>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">â‚¹<%=product.price%></h2>
                    <p class="product__description"><%=product.description%></p>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product/<%=product._id%>?edit=true" data-toggle="tooltip"
                        data-placement="bottom" title="Edit Product"><svg
                            style="color: #bcdd4d; float:left;margin:0px 60px;" class="bi bi-pencil" width="1.5em"
                            height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" />
                            <path fill-rule="evenodd"
                                d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z" />
                        </svg></a>
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <input type="hidden" value="<%=product._id%>" name="productId">
                    <button type="button" onclick="deleteProduct(this)"
                        style="border: none;background: inherit; cursor: pointer;" data-toggle="tooltip"
                        data-placement="bottom" title="Delete"><svg style="color: #ff8f10;" class="bi bi-trash"
                            width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd"
                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg></button>
                </div>
            </article>
            <footer class="copyright">
                <%if(isAuth) {%>
                <ul>
                    <li><a href="/admin/add-product">Add Product</a></li>
                    <li><a href="/admin/admin-products">Admin Products</a></li>
                    <li><a>All Rights Reserved BooksOnCart.com</a></li>
                </ul>
                <%}%>
            
              </footer>
            <% } %>
        </div>
        <% } else{ %>
        <h>No Products</h>
        <% } %>

    </main>
    
</body>
<script src="/js/admin.js"></script>

</html>